class Solution {
    public Node copyRandomList(Node head) {
        if (head == null) return null;

        Node temp = head;

        // STEP 1: Insert copied nodes after originals
        while (temp != null) {
            Node copy = new Node(temp.val);
            copy.next = temp.next;
            temp.next = copy;
            temp = copy.next;
        }

        // STEP 2: Assign random pointers for copied nodes
        temp = head;
        while (temp != null) {
            if (temp.random != null) {
                temp.next.random = temp.random.next;
            }
            temp = temp.next.next;
        }

        // STEP 3: Separate original and copied lists
        temp = head;
        Node dummy = new Node(0);
        Node copyCurr = dummy;

        while (temp != null) {
            copyCurr.next = temp.next;      // copied node
            temp.next = temp.next.next;     // restore original

            copyCurr = copyCurr.next;
            temp = temp.next;
        }

        return dummy.next;
    }
}
