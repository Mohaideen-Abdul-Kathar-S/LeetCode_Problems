class Solution {
    public int[] minBitwiseArray(List<Integer> nums) {
        int n = nums.size();
        int[] arr = new int[n];

        for(int i=0;i<n;i++){
            int t = 0;
            int temp=nums.get(i);
            if((temp & 1)==0) arr[i]=-1;
            else{
                while((temp&1)==1){
                    t++;
                    temp >>=1;
                }
                arr[i]= nums.get(i) - (1<<(t-1));
            }
        }
        return arr;
    }
}
