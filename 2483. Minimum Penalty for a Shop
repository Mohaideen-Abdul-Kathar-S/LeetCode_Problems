class Solution {
    public int bestClosingTime(String nums) {
        int ind =-1, max =0,cnt =0;
        for(int i=0;i<nums.length();i++){
            if(nums.charAt(i)=='N'){
                cnt--;
          
            }else{
                cnt++;
                if(cnt>max){
                    max = cnt;
                    ind = i;
                }
                
            }
           
        }
        return ind+1;
    }
}
