class Solution(object):
    def largestPerimeter(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        # max =0
        # for i in range(len(nums)-2):
        #     for j in range(i+1,len(nums)-1):
        #         for k in range(j+1,len(nums)):
        #             if nums[i]+nums[j]>nums[k] and nums[j]+nums[k]>nums[i] and nums[i]+nums[k]>nums[j]:
        #                 if(nums[i]+nums[j]+nums[k]>max):
        #                     max = nums[i]+nums[j]+nums[k]
        # nums.sort()
        # if nums[-1]+nums[-2]>nums[-3] and nums[-2]+nums[-3]>nums[-1] and nums[-1]+nums[-3]>nums[-2]:
        #     max = nums[-1]+nums[-2]+nums[-3]
        nums = sorted(nums)[::-1]
        for i in range(len(nums)-2):
            if(nums[i+1]+nums[i+2]>nums[i]):
                return nums[i]+nums[i+1]+nums[i+2]

        return 0
