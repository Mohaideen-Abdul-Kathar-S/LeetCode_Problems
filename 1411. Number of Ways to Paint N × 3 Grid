class Solution {
    public int numOfWays(int n) {
        long abc =6;
        long aba = 6;
        for(int i=2;i<=n;i++){
            long Nabc = (2 * abc + 2 * aba)%(1_000_000_007);
            long Naba = (2 * abc + 3 * aba)%(1_000_000_007);
            abc = Nabc;
            aba = Naba;
        }
        return (int)(abc+aba)%(1_000_000_007);
    }
}
