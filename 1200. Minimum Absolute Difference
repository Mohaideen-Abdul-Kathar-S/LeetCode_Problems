class Solution {
    public List<List<Integer>> minimumAbsDifference(int[] arr) {
        Arrays.sort(arr);
        List<List<Integer>> res = new ArrayList<>();
        int min = Integer.MAX_VALUE;
        for(int i=0;i<arr.length-1;i++){
            int a = arr[i], b= arr[i+1];
            if(b-a<min){
                List<Integer> val = new ArrayList<>();
                min = b-a;
                val.add(a);
                val.add(b);
                res.clear();
                res.add(val);
            }else if(b-a==min){
                List<Integer> val = new ArrayList<>();
                val.add(a);
                val.add(b);
                 res.add(val);
            }
        }
        return res;
    }
}
