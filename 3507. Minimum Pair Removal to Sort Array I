class Solution {
    boolean check(List<Integer> arr){
        for(int i=0;i<arr.size()-1;i++){
            if(arr.get(i)>arr.get(i+1)) return true;
        }
        return false;
    }
    public int minimumPairRemoval(int[] nums) {

     
        int cnt =0 ;
        ArrayList<Integer> ls = new ArrayList<>();
        for (int k : nums) {
    ls.add(k);
}
        while(check(ls)){
               int num = Integer.MAX_VALUE;
        int ind = -1;
            for(int i =0;i<ls.size()-1;i++){
                if(ls.get(i)+ls.get(i+1)<num){
                    num = ls.get(i)+ls.get(i+1);
                    ind = i;
                    
                }
            }
            cnt++;
            ls.set(ind, num);
            ls.remove(ind+1);

        }
        return cnt;

    }
}
